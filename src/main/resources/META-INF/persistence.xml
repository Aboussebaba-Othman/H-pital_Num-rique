<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="cliniquePU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- ========== ENTITÃ‰S JPA ========== -->
        <class>com.othman.clinique.model.Personne</class>
        <class>com.othman.clinique.model.Patient</class>
        <class>com.othman.clinique.model.Docteur</class>
        <class>com.othman.clinique.model.Administrateur</class>
        <class>com.othman.clinique.model.Departement</class>
        <class>com.othman.clinique.model.Salle</class>
        <class>com.othman.clinique.model.Consultation</class>

        <properties>
            <!-- ========== CONFIGURATION DOCKER MYSQL ========== -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/clinique_db?useSSL=false&amp;serverTimezone=UTC&amp;allowPublicKeyRetrieval=true&amp;createDatabaseIfNotExist=true"/>
            <property name="jakarta.persistence.jdbc.user" value="clinique_user"/>
            <property name="jakarta.persistence.jdbc.password" value="clinique_pass"/>

            <!-- ========== CONFIGURATION HIBERNATE ========== -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>

            <!-- ========== PERFORMANCE ========== -->
            <property name="hibernate.connection.pool_size" value="10"/>
            <property name="hibernate.current_session_context_class" value="thread"/>
        </properties>
    </persistence-unit>
</persistence>